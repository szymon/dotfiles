{
    "coc.preferences.formatOnSaveFiletypes": ["python", "cpp", "cmake", "c", "rust"],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/.local/pipx/venvs/flake8/bin/flake8",
    "python.formatting.blackPath": "~/.local/pipx/venvs/black/bin/black",
    "python.formatting.blackArgs": [ "-l", "120" ],
    "python.formatting.provider": "black",
    "pyright.disableDiagnostics": true,
    "python.sortImports.path": "~/.local/pipx/venvs/isort/bin/isort",
    "pyright.organizeimports.provider": "isort",

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
